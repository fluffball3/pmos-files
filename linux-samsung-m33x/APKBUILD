# Reference: <https://postmarketos.org/vendorkernel>
# Kernel config based on: arch/arm64/configs/(CHANGEME!)

pkgname=linux-samsung-m33x
pkgver=5.10.236
pkgrel=0
pkgdesc="Samsung Galaxy M33 5G kernel"
arch="aarch64"
_carch="arm64"
_flavor="samsung-m33x"
url="https://kernel.org"
license="GPL-2.0-only"
options="!strip !check !tracedeps pmb:cross-native"
makedepends="
	bash
	bc
	bison
	devicepkg-dev
	findutils
	flex
	openssl-dev
	perl
	xz
	cpio
	python3
	linux-headers
	gcc6
"

	#clang
	#clang18
	#lld18
	#llvm18
#	mkdtboimg create "$_outdir/arch/$_carch/boot/dts/exynos/s5e8825.dtb" --custom0=0x00000000 --custom1=0xff000000 --version=0 --page_size=2048 "$_outdir/arch/$_carch/boot/dts/exynos/s5e8825.dtb"
#CC=clang-18
#HOSTCC=clang-18
#LLVM=-18
#LLVM_IAS=1
#CROSS_COMPILE=aarch64-alpine-linux-musl-

# Compiler: GCC 6 (doesn't boot when compiled with newer versions)
if [ "${CC:0:5}" != "gcc6-" ]; then
	CC="gcc6-$CC"
	HOSTCC="gcc6-gcc"
	CROSS_COMPILE="gcc6-$CROSS_COMPILE"
fi

#0001-Revert-SQUASH-exynos-camera-unify-all-camera-headers.patch
# Source
_repository="android_kernel_samsung_m33x"
_commit="ba642fe8b8834435a826a1d2b41f84620397cbc9"
_config="config-$_flavor.$arch"
source="
	$pkgname-$_commit.tar.gz::https://github.com/fluffball3/$_repository/archive/$_commit.tar.gz
	$_config
"
builddir="$srcdir/$_repository-$_commit"
_outdir="out"

prepare() {
	default_prepare
	REPLACE_GCCH=0
	. downstreamkernel_prepare
}

build() {
	unset LDFLAGS
	#export CC=clang-18
	#export HOSTCC=clang-18
	#export CROSS_COMPILE=aarch64-alpine-linux-musl-
	#CC="${CC:-gcc}"
	make O="$_outdir" ARCH="$_carch" PLATFORM_VERSION=12 CC="${CC:-gcc}" TARGET_SOC=s5e8825 \
		KBUILD_BUILD_VERSION="$((pkgrel + 1 ))-postmarketOS"
	cp $_outdir/arch/$_carch/boot/Image.gz $_outdir/arch/$_carch/boot/Image
}

package() {
	KERNEL_IMAGE_NAME="Image" downstreamkernel_package \
		"$builddir" "$pkgdir" "$_carch" "$_flavor" "$_outdir"

	make dtbs_install O="$_outdir" ARCH="$_carch" \
		INSTALL_DTBS_PATH="$pkgdir/boot/dtbs"

	make modules_install O="$_outdir" ARCH="$_carch" INSTALL_MOD_STRIP=1 \
		INSTALL_MOD_PATH="$pkgdir"
}

